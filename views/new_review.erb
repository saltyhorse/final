
<h1>Review for <%= @restaurant[:name] %></h1>

<form action="/restaurants/<%= @restaurant[:id] %>/reviews/create" method="POST">
  <div class="form-group">
    <label>Would you recommend this restaurant?</label>
    <select class="form-control" name="recommend">
      <option value="1">Yes</option>
      <option value="0">No</option>
    </select>
  </div>
  <div class="form-group">
    <label>Please leave some comments about your experience</label>
    <textarea class="form-control" rows="3" name="comments"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>